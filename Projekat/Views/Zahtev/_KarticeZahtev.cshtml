@using Projekat.ViewModels;
@model  GlobalniZahtevViewModel


<div class="kartica" id=@Model.materijal.materijalId>
    <div class="karticaTekts">
        <h2>
            @Model.materijal.materijalNaslov
        </h2>

        <p class="opis">
            @Model.materijal.materijalOpis
        </p>
        <div class="kontrole">
            <div class="triTackeKontrole" tabindex="1">
                <img src="~/Content/img/tri-tacke.png" alt="jos-opcija">
                <div class="dropdown-sadrzaj">
                    <a class="dropdownOpcija" href="#">Obriši</a>
                    <a class="dropdownOpcija" href="#">Uredi</a>
                    <a class="dropdownOpcija" href="#">Komentariši</a>
                </div>
            </div>
            @if (this.User.IsInRole("GlobalniUrednik"))
            {
                <a href="#" class="kontrola-ikonica dugme-delete">Odbij</a>
            }



            @if (this.User.IsInRole("GlobalniUrednik"))
            {
                <a class="preuzmi" href="#">Odobri</a>
            }
            <a class="preuzmi" href="@Url.Action("DownloadMaterijal", "Materijal", new { id = Model.materijal.materijalId })">preuzmi</a>
        </div>
    </div>

    @*<select class="js-example-basic-single" name="state" multiple="multiple">
            <option value="AL">Alabama</option>

            <option value="WY">Wyoming</option>
        </select>*@

    <div class="karticaFormat">
        <a href="#">
            <img class="imgPath" src="@Url.Content(Model.materijal.ImgPath)" alt="preuzmi-PDF">
        </a>
    </div>
    @*@Html.HiddenFor(Model => osiromaseni.materijalId, new {@id ="nesto" })*@
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Obavestenje <span>   </span></h4>
            </div>
            <div class="modal-body">
                <p>Da li ste sigurni da želite da obrisete modul?</p>
                <input type="hidden" id="hiddenModulId" />
            </div>
            <div class="modal-footer">
                <button id="deleteConfirm" type="button" class="btn btn-default">Potvrdi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Odustani</button>
            </div>
        </div>
    </div>
</div>
