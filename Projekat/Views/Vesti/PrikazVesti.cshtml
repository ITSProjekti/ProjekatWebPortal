@model Projekat.Models.VestModel
@{
    ViewBag.Title = "PrikazVesti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="sredina" name="sredina" class="sredina-upload-mat">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
   
    
    <div class="row"></div>
    <div class="col-md-8">
        <img style="height:350px; width: 850px; margin-left: 55px;" class="card-img" src="@Model.Thumbnail" alt="Card image">
        <div class="card-img-overlay glavnaVest">
            <div class="naslovVesti">
                <p class="card-text"> @Model.Naslov </p>
            </div>
            <p class="card-text">@Model.KratakOpis</p>
            <p class="card-header" style="border:none">Last updated few mins ago</p>
        </div>
    </div>
    <div id="container"></div>
    <div id="progress" style="display:none">
        <h4>Loading...</h4>
    </div>
    <script>
        var pageSize = 15;
        var pageIndex = 0;
        var idGlavne = @Model.Id;
        $(document).ready(function () {

            GetData();
            $(window).scroll(function () {
                if ($(window).scrollTop() ==
                    $(document).height() - $(window).height() && !_incallback) {
                    GetData();
                }
            });
        });
        function GetData() {
            _incallback = true;
            console.log("pozvana funkcija");
            $.ajax({
                type: 'GET',
                url: '/Vesti/PosaljiVesti',
                data: { "pageindex": pageIndex, "pagesize": pageSize,"idGlavne":idGlavne },
                dataType: 'json',
                success: function (data) {
                    if (data != null) {
                        for (var i = 0; i < data.length; i++) {
                            $("#container").append("<div class=\"col-md-4 smanjen\"><div class=\"card cardresp\">" +
      "<div class=\"slikaNaslov\"><img class=\"card-img-top\" src=\"" + data[i].Thumbnail + "\" alt=\"Card image cap\"> <div class=\"naslovVesti\"><p class=\"card-text\">" + data[i].Naslov + "</p></div></div>" +
      "<div class=\"card-body\"><div class=\"preveiw\"> <p class=\"prvText\">" + data[i].KratakOpis + "</p></div> <hr/> <div class=\"prikazi\">" +
                "<input type=\"submit\" class=\"btnsVestiPrikaz\" value=\"SAZNAJ VIŠE\" />"+
                "<input type=\"submit\" class=\"btnsVestiPrikaz\" value=\"OBRIŠI\" onclick=\"return confirm('Da li želite da obrišete vest?')\"/>"+
            "</div>" +
      "</div>" +
    "</div></div>");
                        }
                        pageIndex++;
                    }
                },
                beforeSend: function () {
                    $("#progress").show();
                },
                complete: function () {
                    $("#progress").hide();
                    _incallback = false;
                },
                error: function () {
                    alert("Error while retrieving data!");
                    _incallback = false;
                }
            });

        }
    </script>
</div>