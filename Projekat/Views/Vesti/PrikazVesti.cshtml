
@{
    ViewBag.Title = "PrikazVesti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Pregled vesti</h2>

    <div id="container" class="row"></div>
    <div id="progress" style="display:none">
        <h4>Loading...</h4>
    </div>
    <script>
    var pageSize = 15;
    var pageIndex = 0;

    $(document).ready(function () {

        GetData();
        $(window).scroll(function () {
            if ($(window).scrollTop() ==
                $(document).height() - $(window).height() && !_incallback) {
                GetData();
            }
        });
    });
    function GetData() {
        _incallback = true;
        console.log("pozvana funkcija");
        $.ajax({
            type: 'GET',
            url: '/Vesti/PosaljiVesti',
            data: { "pageindex": pageIndex, "pagesize": pageSize },
            dataType: 'json',
            success: function (data) {
                if (data != null) {
                    for (var i = 0; i < data.length; i++) {
                        $("#container").append("<div class=\"card\" style=\"width: 18rem;\">"+
  "<img class=\"card-img-top\" src=\"" +data[i].Thumbnail+ "\" alt=\"Card image cap\">"+
  "<div class=\"card-body\">"+
    "<p class=\"card-text\">"+data[i].Naslov+"</p>"+
  "</div>"+
"</div>");
                    }
                    pageIndex++;
                }
            },
            beforeSend: function () {
                $("#progress").show();
            },
            complete: function () {
                $("#progress").hide();
                _incallback = false;
            },
            error: function () {
                alert("Error while retrieving data!");
                _incallback = false;
            }
        });

    }
    </script>
