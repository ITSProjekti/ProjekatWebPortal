
<div id="sredina" name="sredina" class="sredina-upload-mat" style = "width: calc(100% - 338px)">


    

    @model Projekat.Models.RegisterViewModel
    @{
        ViewBag.Title = "Unos novog korisnika";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <link rel="stylesheet" type="text/css" href="~/Content/css/Register.css">

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@name = "forma", @id = "noviKorisnik", @class = "form-horizontal", role = "form", @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>Napravite novi nalog</h4>
        <hr />

        @*@Html.ValidationSummary()*@
        @Html.LabelFor(m => m.Ime, new { @class = "matDesignLabel" })
        @Html.TextBoxFor(m => m.Ime, new { @class = "korisnikTB" })
        


        @Html.LabelFor(m => m.Prezime, new { @class = "matDesignLabel" })
        @Html.TextBoxFor(m => m.Prezime, new { @class = "korisnikTB" })
        


        @Html.LabelFor(m => m.Email, new { @class = "matDesignLabel" })
        @Html.TextBoxFor(m => m.Email, new { @class = "korisnikTB" })


        @Html.LabelFor(m => m.Password, new { @class = "matDesignLabel" })
        @Html.PasswordFor(m => m.Password, new { @class = "korisnikTB" })
        @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@


        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "matDesignLabel" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "korisnikTB" })
        @*@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })*@

        @Html.LabelFor(m => m.phoneNumber, new { @class = "matDesignLabel" })
        @Html.TextBoxFor(m => m.phoneNumber, new { @class = "korisnikTB" })
        @*Html.ValidationMessageFor(m => m.phoneNumber, "", new { @class = "text-danger" })*@
        <div id="godina">
            @Html.LabelFor(m => m.GodinaUpisa, new { @class = "matDesignLabel" })
            @Html.TextBoxFor(m => m.GodinaUpisa, new { @class = "korisnikTB" })
        </div>

            <div class="noviKorisnikDD">
                
                <label for="customDropdown" class="labela"> Odaberite smer: </label>
                @Html.DropDownListFor(m => m.selektovaniSmer, new SelectList(Model.Smerovi, "smerId", "smerNaziv"), new { @class = "customDropdown" })
            </div>
            <div class="noviKorisnikDD" name="SelektUloga">

                <label for="customDropdown" class="labela"> Odaberite ulogu: </label>
                @Html.DropDownListFor(m => m.selektovanaUloga, new SelectList(Model.Uloge, "Name", "Name"), new {@class = "customDropdown", @selected = "selected"})
            </div>
            <div class="noviKorisnikDD">

                <label for="customDropdown" class="labela"> Odaberite skolu: </label>
                @Html.DropDownListFor(m => m.SelektovanaSkola, new SelectList(Model.Skole, "IdSkole", "NazivSkole"), new { @class = "customDropdown", @selected = "selected" })
            </div>
           


        <input type="file" name="Fajl" id="file" class="inputfile" />
        <label for="file" id="izaberi-materijal"> <span id="filename"> <span> <img src="~/Content/img/upload2.png" alt="Izaberite Sliku"> Izaberite sliku...</span></span> </label>
        <input type="submit" id="postavi" value="Postavi" class="btnPostavi"/>
        
        
    }
    </div>
   @section Scripts {
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    @Scripts.Render("~/bundles/novi_korisnik")


}