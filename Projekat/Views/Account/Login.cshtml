@using Projekat.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div id="sredina" name="sredina">


    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal",@id="noviKorisnik", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Ulogujte se na Vas nalog</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "matDesignLabel" })
                        <br />
                        <div>
                            @Html.TextBoxFor(m => m.Username, new { @class = "korisnikTB" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "matDesignLabel" })
                        <br />
                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "korisnikTB" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <div class="checkbox" style="float:left">
                              
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "rememberMeCb" })
                                @Html.LabelFor(m => m.RememberMe, new { @class = "rememberMe" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Log in" class="btn btn-default" style="width: 76%;margin-left: 11%;" />
                        </div>
                    </div>
                    <br /><br />
                    
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
            <p>
                @Html.ActionLink("Ukoliko nemate nalog, registrujte se", "Register")
            </p>
        </div>
       
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}